# =============================================================================
# ForgeLedger Test â€” Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# Never commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Database (Required)
# -----------------------------------------------------------------------------
# PostgreSQL connection string for Neon serverless database.
# Must start with postgresql:// and include sslmode=require for Neon.
DATABASE_URL=postgresql://user:password@ep-example-123456.us-east-2.aws.neon.tech/forgeledger?sslmode=require

# -----------------------------------------------------------------------------
# Environment (Required)
# -----------------------------------------------------------------------------
# Deployment environment: "development" or "production"
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
# Port for the backend API server (uvicorn)
API_PORT=8000

# -----------------------------------------------------------------------------
# CORS (Optional)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed CORS origins.
# Default: http://localhost:5173 (Vite dev server)
CORS_ORIGINS=http://localhost:5173

# -----------------------------------------------------------------------------
# Logging (Optional)
# -----------------------------------------------------------------------------
# Application logging level: DEBUG, INFO, WARNING, ERROR
# Default: INFO
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Database Connection Pool (Optional)
# -----------------------------------------------------------------------------
# Minimum number of connections in the asyncpg pool.
# Default: 2
DB_POOL_MIN_SIZE=2

# Maximum number of connections in the asyncpg pool.
# Default: 10
DB_POOL_MAX_SIZE=10

# -----------------------------------------------------------------------------
# API Configuration (Optional)
# -----------------------------------------------------------------------------
# Prefix for all API routes.
# Default: /api
API_PREFIX=/api

# -----------------------------------------------------------------------------
# Development Only
# -----------------------------------------------------------------------------
# Enable uvicorn auto-reload on file changes.
# Default: true (development), false (production)
RELOAD=true

# Enable debug mode with verbose error output.
# Default: true (development), false (production)
DEBUG=true
